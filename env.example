# API ключи Bybit
API_KEY_BYBIT=your_bybit_api_key_here
API_SECRET_BYBIT=your_bybit_secret_here

# API ключи Binance
API_KEY_BINANCE=your_binance_api_key_here
API_SECRET_BINANCE=your_binance_secret_here

# Секрет для webhook
WEBHOOK_SECRET=your_webhook_secret_here

# Настройки режима работы
TEST_MODE=True
DEFAULT_EXCHANGE=bybit

# Тестовые балансы (используются только в TEST_MODE)
TEST_BALANCE_USDT=100

# База данных - по умолчанию MySQL
USE_MYSQL=True  # True для MySQL, False для SQLite

# MySQL настройки (Railway автоматически предоставляет эти переменные)
# MYSQLHOST=mysql.railway.internal
# MYSQLPORT=3306
# MYSQLUSER=root
# MYSQLPASSWORD=auto_generated_password
# MYSQLDATABASE=railway

# SQLite настройки (только для локальной разработки)
# DB_PATH=/path/to/trades.db

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=True

# Telegram бот webhook (опционально, для автоматической настройки)
TELEGRAM_BOT_WEBHOOK_URL=https://your-domain.com/telegram-webhook
