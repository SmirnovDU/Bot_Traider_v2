# API ключи Bybit
API_KEY_BYBIT=your_bybit_api_key_here
API_SECRET_BYBIT=your_bybit_secret_here

# API ключи Binance
API_KEY_BINANCE=your_binance_api_key_here
API_SECRET_BINANCE=your_binance_secret_here

# Секрет для webhook
WEBHOOK_SECRET=your_webhook_secret_here

# Настройки режима работы
TEST_MODE=True
DEFAULT_EXCHANGE=bybit

# Тестовые балансы (используются только в TEST_MODE)
TEST_BALANCE_USDT=100

# База данных
USE_MYSQL=False  # True для MySQL, False для SQLite
# RESET_DB_ON_START=False  # Если True - БД будет сброшена при старте (все данные потеряются!)

# MySQL настройки (только если USE_MYSQL=True)
MYSQL_HOST=your_railway_mysql_host
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=trading_bot

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=True

# Telegram бот webhook (опционально, для автоматической настройки)
TELEGRAM_BOT_WEBHOOK_URL=https://your-domain.com/telegram-webhook
